<!-- View Playlist -->
<div class="columns is-centered mt-5">
    <article class="panel is-success column is-three-fifths">
        <p class="panel-heading">
            {{playlist.name}}
        </p>
        <p class="panel-tabs pt-3 pb-3">
            {{playlist.description}}
        </p>
        <form id="playlist-actions">

            <!-- Loop through songs -->
            {{#each songs as |song|}}
            <div class="panel-block is-active flex-row-between">
                <div class="">
                    <p>{{song.name}} by {{song.artist}}</p>
                </div>
                <div class=""><button class="button is-dark" data-song_id="{{song.id}}" id="delete-song-button">Delete
                        Song</button></div>
            </div>
            {{/each}}

            <div class="control mt-3 mb-0 is-centered columns is-centered">
                <a class="button is-dark mx-auto" data-playlist_id="{{playlist.id}}"
                    href="/searchsong/{{playlist.id}}">Add New
                    Song</a>
                <button class="button is-dark mx-auto" data-playlist_id="{{playlist.id}}" type='submit'
                    id="delete-playlist-button">Delete Playlist</button>
            </div>
        </form>
    </article>
</div>

<script src="/js/deletePlaylist.js"></script>